
@{
    Layout = null;
}
@*INDEX LOGIN*@

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta charset="utf-8" />
    <title>ComcCell Generator - Iniciar sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/pages/ico/60.png")" />
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/Content/pages/ico/76.png")" />
    <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/Content/pages/ico/120.png")" />
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/Content/pages/ico/152.png")" />
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/favicon.ico")" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-touch-fullscreen" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link href="@Url.Content("~/Content/assets/plugins/pace/pace-theme-flash.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/assets/plugins/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/assets/plugins/font-awesome/css/font-awesome.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/assets/plugins/jquery-scrollbar/jquery.scrollbar.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/Content/assets/plugins/select2/css/select2.min.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/Content/assets/plugins/switchery/css/switchery.min.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/Content/pages/css/pages-icons.css")" rel="stylesheet" type="text/css" />
    <link class="main-stylesheet" href="@Url.Content("~/Content/pages/css/pages.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
    window.onload = function()
    {
      // fix for windows 8
      if (navigator.appVersion.indexOf("Windows NT 6.2") != -1)
        document.head.innerHTML += '<link rel="stylesheet" type="text/css")" href="@Url.Content("~/Content/pages/css/windows.chrome.fix.css")" />'
    }
    </script>
</head>
<body class="fixed-header ">
    <div class="login-wrapper ">
        <!-- START Login Background Pic Wrapper-->
        <div class="bg-pic">
            <!-- START Background Pic-->
            <img src="@Url.Content("~/Content/img/appointment_1500x1000.png")" data-src="@Url.Content("~/Content/img/appointment_1500x1000.png")" data-src-retina="@Url.Content("~/Content/img/appointment_1500x1000.png")" alt="" class="lazy">
            <!-- END Background Pic-->
            <!-- START Background Caption-->
            <div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">

            </div>
            <!-- END Background Caption-->
        </div>
        <!-- END Login Background Pic Wrapper-->
        <!-- START Login Right Container-->
        <div class="login-container bg-white">
            <div class="p-l-50 m-l-20 p-r-50 m-r-20 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
                <div class="text-center">
                    <img src="@Url.Content("~/Content/img/logo.png")" alt="logo" data-src="@Url.Content("~/Content/img/logo.png")" data-src-retina="@Url.Content("~/Content/img/logo.png")" width="70%" height="100%">
                    <p class="hint-text">TEMPLATE Continental®</p>
                </div>

                <!-- START Login Form -->
                @*@using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "p-t-15", @id = "form-login", @role = "form" }))
                    {*@
                <form action="/Login/Signin" method="post">
                    <!-- START Form Control-->
                    <div class="form-group form-group-default">
                        <label>Usuario</label>
                        <div class="controls">
                            <input type="text" name="username" value="" class="form-control" placeholder="Windows User" required />
                        </div>
                    </div>
                    <!-- END Form Control-->
                    <!-- START Form Control-->
                    <div class="form-group form-group-default">
                        <label>Password</label>
                        <div class="controls">
                            <input type="password" name="password" value="" class="form-control" placeholder="Windows password" required />

                        </div>
                    </div>
                    <!-- START Form Control-->

                    <div class="row">
                        <div class="col-md-6 no-padding sm-p-l-10">
                            <div class="">
                                @Html.AntiForgeryToken()

                            </div>
                        </div>
                    </div>
                    <!-- END Form Control-->
                    <button class="btn btn-warning btn-cons m-t-10">Login</button>

                </form>
                <!--END Login Form-->
                @*}*@
                <div class="pull-bottom sm-pull-bottom">
                    <div class="m-b-30 p-r-80 sm-m-t-20 sm-p-r-15 sm-p-b-20 clearfix">
                        <div class="col-sm-3 col-md-2 no-padding">

                        </div>
                        <div class="col-sm-9 no-padding m-t-10">
                            <p>
                                <small>
                                    <!-- Algún texto adicional. -->
                                    Connected to: <label class="label label-info">@Session["database"]</label>
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Login Right Container-->
    </div>
    <!-- BEGIN VENDOR JS -->
    <script src="@Url.Content("~/Content/assets/plugins/pace/pace.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery/jquery-1.11.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/modernizr.custom.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery-ui/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/tether/js/tether.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery/jquery-easy.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery-unveil/jquery.unveil.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery-ios-list/jquery.ioslist.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery-actual/jquery.actual.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery-scrollbar/jquery.scrollbar.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/assets/plugins/select2/js/select2.full.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/assets/plugins/classie/classie.js")"></script>
    <script src="@Url.Content("~/Content/assets/plugins/switchery/js/switchery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
    <!-- END VENDOR JS -->
    <script src="@Url.Content("~/Content/pages/js/pages.min.js")"></script>
    <script src="~/Scripts/custom/notifications.js"></script>
    <script src="~/Scripts/app/global.js"></script>

</body>
</html>
