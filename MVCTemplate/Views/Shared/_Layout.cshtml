@using MVCTemplate.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/favicon.ico" rel="icon" type="image/x-icon" />
    <link href="~/favicon.ico" rel="apple-touch-icon" type="image/x-icon" />
    <title>@ViewBag.Title - Continental MVC Template</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", false)


</head>
<body class="fixed-header">
    <div id="page" style="display:none">

        <!-- RETURN TO TOP SCROLL ARROW -->
        <a href="javascript:" id="return-to-top"><i class="fas fa-chevron-up"></i></a>
        <!-- BEGIN SIDEBAR -->
        <!-- BEGIN SIDEBPANEL-->

        <nav class="page-sidebar" data-pages="sidebar">
            <!-- BEGIN SIDEBAR MENU TOP TRAY CONTENT-->
            <div class="sidebar-overlay-slide from-top" id="appMenu">

            </div>
            <!-- END SIDEBAR MENU TOP TRAY CONTENT-->
            <!-- BEGIN SIDEBAR MENU HEADER-->
            <div class="sidebar-header">
                <img src="@Url.Content("~/Content/img/logo.png")" alt="logo" class="brand" data-src="@Url.0Content(" ~/Content/img/logo.png")" data-src-retina="@Url.Content("~/Content/img/logo.png")" width="130" height="42">
                <div class="sidebar-header-controls">

                    <button type="button" class="btn btn-link hidden-sm-down" data-toggle-pin="sidebar">
                        <i class="far fs-12"></i>
                    </button>
                </div>
            </div>
            <!-- END SIDEBAR MENU HEADER-->
            <!-- START SIDEBAR MENU -->
            <div class="sidebar-menu">
                <!-- BEGIN SIDEBAR MENU ITEMS-->
                <ul class="menu-items">
                    <li class="m-t-30 ">
                        <a href="@Url.Action("Index", "Home")" class="detailed">
                            <span class="title">Inicio</span>
                            <span class="details">@*comentarios*@</span>
                        </a>
                        <span id="spanHome" class="icon-thumbnail"><i class="pg-home"></i></span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "T_Areas")" class="detailed">
                            <span class="title">Areas</span>
                            <span class="details">@*comentarios*@</span>
                        </a>
                        <span id="spanAreas" class="icon-thumbnail"><i class="fa fa-cubes"></i></span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "T_Empleados")" class="detailed">
                            <span class="title">Empleados</span>
                            <span class="details">@*comentarios*@</span>
                        </a>
                        <span id="spanEmpleados" class="icon-thumbnail"><i class="fa fa-users"></i></span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "T_Materiales")" class="detailed">
                            <span class="title">Materiales</span>
                            <span class="details">@*comentarios*@</span>
                        </a>
                        <span id="spanMateriales" class="icon-thumbnail"><i class="fa fa-briefcase"></i></span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "T_Roles")" class="detailed">
                            <span class="title">Roles</span>
                            <span class="details">@*comentarios*@</span>
                        </a>
                        <span id="spanRoles" class="icon-thumbnail"><i class="fa fa-id-badge"></i></span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "T_Transacciones")" class="detailed">
                            <span class="title">Transacciones</span>
                            <span class="details">@*comentarios*@</span>
                        </a>
                        <span id="spanTransacciones" class="icon-thumbnail"><i class="fa fa-exchange-alt"></i></span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "T_Usuarios")" class="detailed">
                            <span class="title">Usuarios</span>
                            <span class="details">@*comentarios*@</span>
                        </a>
                        <span id="spanUsuarios" class="icon-thumbnail"><i class="fa fa-user-plus"></i></span>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <!-- END SIDEBAR MENU -->
        </nav>
        <!-- END SIDEBAR -->
        <!-- END SIDEBAR -->
        <!-- START PAGE-CONTAINER -->
        <div class="page-container">
            <!-- START PAGE HEADER WRAPPER -->
            <!-- START HEADER -->
            <div class="header ">
                <!-- START MOBILE SIDEBAR TOGGLE -->
                <a href="#" class="btn-link toggle-sidebar hidden-lg-up pg pg-menu" data-toggle="sidebar">
                </a>
                <!-- END MOBILE SIDEBAR TOGGLE -->
                <div class="">
                    <div class="brand inline">
                        <a href="@Url.Action("Index", "Home")"><img class="m-l-50" src="@Url.Content("~/Content/img/logo.png")" alt="logo" data-src="@Url.Content("~/Content/img/logo.png")" data-src-retina="@Url.Content("~/Content/img/logo.png")" width="200" height="60"></a>
                    </div>
                    <span class=" d-lg-inline-block d-none bold text-uppercase" style="color:#ffa500">
                        TEMPLATE | Version 1.0.0.0
                    </span>

                </div>

                <div class="d-flex align-items-center">
                    <!-- START User Info-->
                    <div class="dropdown pull-right ">
                        <div class="pull-left p-r-10 fs-14 font-heading d-lg-block d-none">

                            <span class="semi-bold">
                                Meliza
                            </span>
                        </div>
                        <div class="dropdown pull-right d-lg-block d-none">
                            <button class="profile-dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="thumbnail-wrapper d32 circular inline">
                                    <img src="@Url.Content("~/Content/img/user.png")" alt="" data-src="@Url.Content("~/Content/img/user.png")" data-src-retina="@Url.Content("~/Content/img/user.png")" width="32" height="32">
                                </span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right profile-dropdown" role="menu">
                                <a href="@Url.Action("Index","Configuracion")" class="dropdown-item"><i class="pg-settings_small"></i> Configuraciones</a>
                                <a href="" class="dropdown-item"><i class="pg-signals"></i> Ayuda</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="@Url.Action("Logout","Login")" class="clearfix bg-master-lighter dropdown-item">
                                        <span class="pull-left">Logout</span>
                                        <span class="pull-right"><i class="pg-power"></i></span>
                                    </a>
                                }

                            </div>
                        </div>

                    </div>

                    <!-- END User Info-->
                </div>
            </div>
            <!-- END HEADER -->
            <!-- END PAGE HEADER WRAPPER -->
            <!-- START PAGE CONTENT WRAPPER -->
            <div class="page-content-wrapper full-height">
                <!-- START PAGE CONTENT -->
                <div class="content full-height">
                    <!-- START CONTAINER FLUID -->
                    <div class="container-fluid container-fixed-lg p-t-25">
                        <!-- BEGIN PlACE PAGE CONTENT HERE -->
                        @Scripts.Render("~/Scripts/jquery")
                        <!-- END PLACE PAGE CONTENT HERE -->
                        @RenderBody()
                    </div>
                    <!-- END CONTAINER FLUID -->
                </div>
                <!-- END PAGE CONTENT -->
                <!-- MODAL STICK UP  -->
                <div class="modal stick-up" id="ModalStickUp" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content small-text">
                            <div id="ModalStickUpContent">
                            </div>
                        </div>
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- END MODAL STICK UP  -->
                <!-- MODAL -->
                <div class="modal fade slide-up" id="ModalSlide" role="dialog" aria-hidden="true">
                    <div id="ModalSlideContent">
                    </div>
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- END MODAL -->
            <!-- START FOOTER -->
            <div class="container-fluid container-fixed-lg footer">
                <div class="copyright sm-text-center">
                    <p class="small no-margin pull-left sm-pull-reset">
                        <span class="hint-text">Copyright © @DateTime.Now.Year </span>
                        <span class="font-montserrat">Continental Automotive Nogales S.A. de C.V.</span>
                        <span class="hint-text">All rights reserved.</span>

                    </p>
                    <p class="small no-margin pull-right sm-pull-reset">
                        <a href="#">Developed by: Continental Nogales</a>
                    </p>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- END FOOTER -->
    </div>

    <div id="loading" class="loading-page">
        <div class="counter">
        </div>
    </div>

    <!-- END PAGE CONTENT WRAPPER -->
    <!-- END PAGE CONTAINER -->
    <!-- BEGIN VENDOR JS -->
    <!-- BEGIN VENDOR JS -->
    <script>
        mainUrl = '@Url.Content("~/")';

        ////Pagina de pruebas
        //window.location = mainUrl + 'Home/PaginaPruebas'

        function onReady(callback) {
            var intervalID = window.setInterval(checkReady, 1000);

            function checkReady() {
                if (document.getElementsByTagName('body')[0] !== undefined) {
                    window.clearInterval(intervalID);
                    callback.call(this);
                }
            }
        }

        function show(id, value) {
            document.getElementById(id).style.display = value ? 'block' : 'none';
        }

        onReady(function () {
            show('page', true);
            show('loading', false);
        });
    </script>

    @Scripts.Render("~/Scripts/plugins")
    @RenderSection("plugins", required: false)
    @Scripts.Render("~/Scripts/pages")
    @RenderSection("pages", required: false)
    <script src="~/Scripts/app/global.js"></script>
    @Scripts.Render("~/Scripts/modalform")
    @RenderSection("scripts", required: false)
</body>
</html>
